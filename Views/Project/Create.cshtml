@using AspNetCoreSibers.Domain.Entities;
@using AspNetCoreSibers.Service.Shared;

@model Project
@{
    ViewData["Title"] = "Sibers - Добавление проекта";
}

<div class="row h-100">
    <form class="d-flex flex-column gap-2 col" asp-controller="@TagHelpers.AspProjectController" asp-action="@TagHelpers.AspProjectCreateAction" method="post">
        <div class="form-group">
            <label>Название проекта</label>
            <input class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
            <label>Название компании-заказчика</label>
            <input class="form-control" asp-for="CompanyClientName">
        </div>
        <div class="form-group">
            <label>Название компании-исполнителя</label>
            <input class="form-control" asp-for="CompanyExecutorName">
        </div>

        <div class="form-group">
            <label>Дата начала проекта</label>
            <input class="form-control" readonly type="text" asp-for="ProjectStartDate" value="@DateTime.Now.ToString(Constants.DATE_FORMAT)">
        </div>

        <div class="form-group">
            <label>Приоритет проекта</label>
            <input class="form-control" type="number" asp-for="Priority" value="">
        </div>

        <input class="btn btn-outline-primary w-auto" type="submit" value="Добавить информацию о проекте" />
    </form>
</div>



