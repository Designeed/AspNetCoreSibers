@using AspNetCoreSibers.Domain.Entities;
@using AspNetCoreSibers.Service.Shared;

@model Employee
@{
    ViewData["Title"] = "Sibers - Редактирование сотрудника";
}

<div class="row h-100">
    <form class="d-flex flex-column gap-2 col" asp-controller="@TagHelpers.AspEmployeeController" asp-action="@TagHelpers.AspEmployeeEditAction" method="post">
        <div class="form-group">
            <label>Фамилия</label>
            <input class="form-control" asp-for="LastName">
        </div>

        <div class="form-group">
            <label>Имя</label>
            <input class="form-control" asp-for="FirstName">
        </div>

        <div class="form-group">
            <label>Отчетсво</label>
            <input class="form-control" asp-for="Patronymic">
        </div>

        <div class="form-group">
            <label>Почта</label>
            <input class="form-control" type="email" asp-for="Email">
        </div>

        <input class="btn btn-outline-primary w-auto" type="submit" value="Редактировать информацию о сотруднике" />
    </form>
    @if (Model != null && Model.Projects.Any())
    {
        <div class="col">
            <div>Проекты сотрудника:</div>
            <div class="row row-cols-lg-2 g-2 overflow-auto mt-1">

                @foreach (var project in Model.Projects)
                {
                    <div class="col">

                        <div class="card d-flex flex-row align-items-center p-3 h-100">

                            <img class="card-img-left" src="~/images/project-holder-logo.svg" width="40" height="40">

                            <div class="card-body w-100 overflow-hidden">
                                <h5 class="card-title text-truncate">@project.Name</h5>
                                <div class="text-truncate">Приоритет: @project.Priority</div>
                                <div class="text-truncate">Дата начала: @project.ProjectStartDate.ToString(Constants.DATE_FORMAT)</div>
                            </div>

                            <div class="d-flex flex-column gap-3 align-items-end">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>